---
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  labels:
{% if machine_config_role_is_master | default("True") | bool %}
    machineconfiguration.openshift.io/role: master
  name: 99-master-z-container-registries
{% else %}
    machineconfiguration.openshift.io/role: worker
  name: 99-worker-z-container-registries
{% endif %}
spec:
  config:
    ignition:
      version: 2.2.0
    storage:
      files:
      - contents:
          source: data:text/plain;charset=utf-8;base64,{{ registries_conf_b64encoded }}
          verification: {}
        filesystem: root
        mode: 420
        path: /etc/containers/registries.conf