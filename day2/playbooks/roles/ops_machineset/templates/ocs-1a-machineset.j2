apiVersion: machine.openshift.io/v1beta1
kind: MachineSet
metadata:
  labels:
    machine.openshift.io/cluster-api-cluster: "{{ infrastructure_name }}"
  name: "{{ infrastructure_name }}-storage-us-gov-east-1a"
  namespace: openshift-machine-api
spec:
  replicas: 1
  selector:
    matchLabels:
      machine.openshift.io/cluster-api-cluster: "{{ infrastructure_name }}"
      machine.openshift.io/cluster-api-machineset: "{{ infrastructure_name }}-storage-us-gov-east-1a" 
  template:
    metadata:
      labels:
        machine.openshift.io/cluster-api-cluster: "{{ infrastructure_name }}" 
        machine.openshift.io/cluster-api-machine-role: storage
        machine.openshift.io/cluster-api-machine-type: storage
        machine.openshift.io/cluster-api-machineset: "{{ infrastructure_name }}-storage-us-gov-east-1a"
    spec:
      metadata:
        labels:
          node-role.kubernetes.io/worker: ""
          cluster.ocs.openshift.io/openshift-storage: ""
      providerSpec:
        value:
          ami:
            id: ami-a45ab1d5 
          apiVersion: awsproviderconfig.openshift.io/v1beta1
          blockDevices:
            - ebs:
                iops: 0
                volumeSize: 300
                volumeType: gp2
            - ebs:
                iops: 0
                volumeSize: 1000
                volumeType: gp2
            - ebs:
                iops: 0
                volumeSize: 1000
                volumeType: gp2
          credentialsSecret:
            name: aws-cloud-credentials
          deviceIndex: 0
          iamInstanceProfile:
            id: "{{ infrastructure_name }}-storage-profile"  # Need to change this 
          instanceType: m5.4xlarge
          kind: AWSMachineProviderConfig
          placement:
            availabilityZone: us-gov-east-1a
            region: us-gov-east-1
          securityGroups:
            - filters:
                - name: tag:Name
                  values:
                    - "{{ infrastructure_name }}-storage-sg"  # Change
          subnet:
            filters:
              - name: tag:Name
                values:
                  - "{{ infrastructure_name }}-private-us-gov-east-1a"
          tags:
            - name: "kubernetes.io/cluster/{{ infrastructure_name }}"
              value: owned
          userDataSecret:
            name: worker-user-data   # Change
